html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Show
    body
        h1= task.description
        p= task.createdAt
        p
          strong Autor:
          span= task.user.email
        ul
          each category in task.categories
            li=category.title
        form(action=`/tasks/${task.id}?_method=DELETE` method="POST")
            input(type="submit" value="Eliminar")